{
	"name": "react-boilerplate",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"author": "Chris Villarreal",
	"scripts": {
		"start": "webpack serve",
		"build": "webpack",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"format": "prettier --write \"**/*.+(js|jsx|json|css|md)\""
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint && npm run format"
		}
	},
	"lint-staged": {
		"*.+(js|jsx)": [
			"eslint --fix",
			"git add"
		],
		"*.+(json|css|md)": [
			"prettier --write",
			"git add"
		]
	},
	"dependencies": {
		"css-loader": "^5.0.1",
		"react": "^17.0.1",
		"react-dom": "^17.0.1",
		"style-loader": "^2.0.0"
	},
	"devDependencies": {
		"@babel/core": "^7.12.10",
		"@babel/preset-env": "^7.12.11",
		"@babel/preset-react": "^7.12.10",
		"babel-loader": "^8.2.2",
		"eslint": "^7.16.0",
		"eslint-config-prettier": "^7.1.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-prettier": "^3.3.0",
		"eslint-plugin-react": "^7.21.5",
		"html-webpack-plugin": "^4.5.0",
		"husky": "^4.3.6",
		"lint-staged": "^10.5.3",
		"prettier": "^2.2.1",
		"webpack": "^5.11.0",
		"webpack-cli": "^4.2.0",
		"webpack-dev-server": "^3.11.0"
	}
}
